{
  "name": "turborepo-stack",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "npm run test:api",
    "test:all": "npm run test:api",
    "test:api": "npm run test --workspace=apps/api",
    "test:api:watch": "npm run test:watch --workspace=apps/api",
    "test:api:coverage": "npm run test:coverage --workspace=apps/api",
    "docker:build": "npm run docker:build:admin && npm run docker:build:api && npm run docker:build:realtime",
    "docker:build:admin": "docker build -t registry.gitlab.com/groupvortex/stackline-hub/admin:latest -f apps/admin/Dockerfile .",
    "docker:build:api": "docker build -t registry.gitlab.com/groupvortex/stackline-hub/api:latest -f apps/api/Dockerfile .",
    "docker:build:realtime": "docker build -t registry.gitlab.com/groupvortex/stackline-hub/realtime:latest -f apps/realtime/Dockerfile .",
    "docker:push": "npm run docker:push:admin && npm run docker:push:api && npm run docker:push:realtime",
    "docker:push:admin": "docker push registry.gitlab.com/groupvortex/stackline-hub/admin:latest",
    "docker:push:api": "docker push registry.gitlab.com/groupvortex/stackline-hub/api:latest",
    "docker:push:realtime": "docker push registry.gitlab.com/groupvortex/stackline-hub/realtime:latest",
    "docker:all": "npm run docker:build && npm run docker:push",
    "deploy": "docker stack deploy -c docker-compose.prod.yml stackline-hub"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "turbo": "^2.1.1"
  }
}
